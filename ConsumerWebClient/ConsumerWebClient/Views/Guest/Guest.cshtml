@model ConsumerWebClient.Models.GuestViewModel

@{
    ViewData["Title"] = "Opret en profil";
}

<h1>@ViewData["Title"]</h1>

<h4>Opret dig som gæst for at bruge Cafe Guldhornenes online garderobe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Guest">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Guest.Email" class="control-label"></label>
                <input asp-for="Guest.Email" class="form-control" required maxlength="100" type="email"/>
                <span asp-validation-for="Guest.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
           
                <span>@ViewBag.ErrorMessage</span>
        </form> 
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Fortryd</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}