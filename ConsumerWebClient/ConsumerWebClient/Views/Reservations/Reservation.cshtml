@model APIClient.DTOs.ReservationDTO

@{
    ViewData["Title"] = "Reservation";
}

<h1>Opret Reservation</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArrivalTime" class="control-label">Ankomst</label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfJackets" class="control-label">Antal Jakker</label>
                <input asp-for="AmountOfJackets" class="form-control" />
                <span asp-validation-for="AmountOfJackets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfBags" class="control-label">Antal Tasker</label>
                <input asp-for="AmountOfBags" class="form-control" />
                <span asp-validation-for="AmountOfBags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret Reservation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MyReservations">Tilbage til mine reservationer</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}