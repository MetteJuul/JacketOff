@model ConsumerWebClient.Models.GuestViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>Opret ny gæst</h4>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Guest.Email" class="control-label"></label>
                <input asp-for="Guest.Email" class="form-control" required maxlength="100" type="email"/>
                <span asp-validation-for="Guest.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
                <span>@ViewBag.ErrorMessage</span>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}